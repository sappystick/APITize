# APItize Platform Environment Configuration

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3001
WS_URL=ws://localhost:3002

# =============================================================================
# AWS CONFIGURATION - REPLACE WITH YOUR CREDENTIALS
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_HERE
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY_HERE

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DYNAMODB_TABLE_PREFIX=apitize-dev
DYNAMODB_ENDPOINT=http://localhost:8000

# =============================================================================
# AUTHENTICATION & SECURITY - GENERATE SECURE SECRETS
# =============================================================================
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET_256_BITS
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# AWS Cognito - CONFIGURE YOUR USER POOL
COGNITO_USER_POOL_ID=YOUR_COGNITO_USER_POOL_ID
COGNITO_CLIENT_ID=YOUR_COGNITO_CLIENT_ID
COGNITO_REGION=us-east-1

# =============================================================================
# EXTERNAL SERVICES - ADD YOUR API KEYS
# =============================================================================

# Email Service (SendGrid)
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY_HERE
FROM_EMAIL=noreply@apitize.com

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=YOUR_TWILIO_ACCOUNT_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_AUTH_TOKEN
TWILIO_PHONE_NUMBER=+1234567890

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=debug
SENTRY_DSN=YOUR_SENTRY_DSN_HERE

# =============================================================================
# CONTAINERIZATION SETTINGS - CONFIGURE DOCKER/KUBERNETES
# =============================================================================
DOCKER_HOST=unix:///var/run/docker.sock
KUBERNETES_CONFIG_PATH=/path/to/kubeconfig

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# ADMIN PORTAL SETTINGS
# =============================================================================
ADMIN_PORT=3002
ADMIN_SESSION_SECRET=REPLACE_WITH_ADMIN_SESSION_SECRET

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
ENABLE_SWAGGER_DOCS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_METRICS=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_CONTAINER_BREEDING=false
FEATURE_MULTI_REGION=false

# =============================================================================
# BACKUP & DISASTER RECOVERY - CONFIGURE YOUR S3 BUCKET
# =============================================================================
BACKUP_S3_BUCKET=YOUR_BACKUP_S3_BUCKET
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# CDN & ASSET MANAGEMENT - CONFIGURE CLOUDFRONT
# =============================================================================
CLOUDFRONT_DISTRIBUTION_ID=YOUR_CLOUDFRONT_DISTRIBUTION_ID
S3_ASSETS_BUCKET=YOUR_S3_ASSETS_BUCKET

# =============================================================================
# CONTAINER REGISTRY - CONFIGURE YOUR REGISTRY
# =============================================================================
CONTAINER_REGISTRY_URL=YOUR_REGISTRY_URL
CONTAINER_REGISTRY_USERNAME=YOUR_REGISTRY_USERNAME
CONTAINER_REGISTRY_PASSWORD=YOUR_REGISTRY_PASSWORD

